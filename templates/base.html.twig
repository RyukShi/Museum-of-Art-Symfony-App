<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Home Page{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top" style="margin-bottom: 30px;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('home_page') }}">Museum of Art</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('all_artist') }}">Artists</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('all_artwork') }}">Artworks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('all_classification') }}">Classifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('all_dating_artwork') }}">Dating Artwork</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('all_localisation') }}">Localisations</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Data Manager
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="{{ path('add_artist') }}">Add Arttist</a></li>
                                    <li><a class="dropdown-item" href="{{  path('add_artwork') }}">Add Artwork</a></li>
                                    <li><a class="dropdown-item" href="{{  path('add_classification') }}">Add Classification</a></li>
                                    <li><a class="dropdown-item" href="{{  path('add_dating_artwork') }}">Add Dating</a></li>
                                    <li><a class="dropdown-item" href="{{  path('add_localisation') }}">Add Localisation</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer class="footer mt-4 bg-primary" style="padding-top : 50px;">

            <!-- Copyright -->
            <div class="footer-copyright text-center" style="color : white;">Â© 2022 Copyright:
                <a href="{{ path('home_page') }}" style="color : white;"> Museum of Art</a>
            </div>

        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
