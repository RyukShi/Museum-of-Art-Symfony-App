{% extends 'base.html.twig' %}

{% block title %}Add Artist{% endblock %}

{% block body %}
    <div class="mt-3 container">
        <h4>Add Artist Form</h4>
        {{ form_start(artistForm) }}
            {% if form_errors(artistForm) is not empty %}
                {{ form_errors(artistForm) }}
            {% endif %}
            {{ form_row(artistForm.display_name) }}
            {{ form_row(artistForm.begin_date) }}
            {{ form_row(artistForm.end_date)}}
            {{ form_row(artistForm.gender)}}
            {{ form_row(artistForm.nationality)}}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create new artist !</button>
            </div>
        {{ form_end(artistForm) }}
    </div>
{% endblock %}
