{% extends 'base.html.twig' %}

{% block title %}Edit Classification{% endblock %}

{% block body %}
    <div class="mt-3 container" style="background-color: #E5F1FF;">
        <h4>Edit Classification Form</h4>
        {{ form_start(classificationEditForm) }}
            {% if form_errors(classificationEditForm) is not empty %}
                {{ form_errors(classificationEditForm) }}
            {% endif %}
            {{ form_row(classificationEditForm.classification) }}
            <div class="mt-3" style="display: flex; justify-content: space-evenly; flex-wrap: wrap;">
                <button type="submit" class="btn btn-primary">Modify classification !</button>
                <a class="btn btn-danger" role="button" href="{{ path('all_classification') }}">Cancel</a>
            </div>
        {{ form_end(classificationEditForm) }}
    </div>
{% endblock %}
