{% extends 'base.html.twig' %}

{% block title %}Edit Localisation{% endblock %}

{% block body %}
    <div class="mt-3 container" style="background-color: #E5F1FF;">
        <h4>Edit Localisation Form</h4>
        {{ form_start(localisationEditForm) }}
            {% if form_errors(localisationEditForm) is not empty %}
                {{ form_errors(localisationEditForm) }}
            {% endif %}
            {{ form_row(localisationEditForm.culture) }}
            {{ form_row(localisationEditForm.period) }}
            {{ form_row(localisationEditForm.dynasty) }}
            {{ form_row(localisationEditForm.reign) }}
            {{ form_row(localisationEditForm.region) }}
            {{ form_row(localisationEditForm.subregion) }}
            {{ form_row(localisationEditForm.country) }}
            {{ form_row(localisationEditForm.county) }}
            {{ form_row(localisationEditForm.city) }}
            {{ form_row(localisationEditForm.locale) }}
            {{ form_row(localisationEditForm.locus) }}
            {{ form_row(localisationEditForm.river) }}
            {{ form_row(localisationEditForm.excavation) }}
            <div class="mt-3" style="display: flex; justify-content: space-evenly; flex-wrap: wrap;">
                <button type="submit" class="btn btn-primary">Modify localisation !</button>
                <a class="btn btn-danger" role="button" href="{{ path('all_localisation') }}">Cancel</a>
            </div>
        {{ form_end(localisationEditForm) }}
    </div>
{% endblock %}
