{% extends 'base.html.twig' %}

{% block title %}Add Localisation{% endblock %}

{% block body %}
    <div class="mt-3 container">
        <h4>Add Localisation Form</h4>
        {{ form_start(localisationForm) }}
            {% if form_errors(localisationForm) is not empty %}
                {{ form_errors(localisationForm) }}
            {% endif %}
            {{ form_row(localisationForm.culture) }}
            {{ form_row(localisationForm.period) }}
            {{ form_row(localisationForm.dynasty)}}
            {{ form_row(localisationForm.reign)}}
            {{ form_row(localisationForm.region)}}
            {{ form_row(localisationForm.subregion)}}
            {{ form_row(localisationForm.country)}}
            {{ form_row(localisationForm.county)}}
            {{ form_row(localisationForm.city)}}
            {{ form_row(localisationForm.locale)}}
            {{ form_row(localisationForm.locus)}}
            {{ form_row(localisationForm.river)}}
            {{ form_row(localisationForm.excavation)}}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create new localisation !</button>
            </div>
        {{ form_end(localisationForm) }}
    </div>
{% endblock %}
