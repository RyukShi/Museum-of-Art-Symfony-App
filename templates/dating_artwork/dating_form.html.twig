{% extends 'base.html.twig' %}

{% block title %}Add Dating Artwork{% endblock %}

{% block body %}
    <div class="mt-3 container">
        <h4>Add Dating Artwork Form</h4>
        {{ form_start(datingForm) }}
            {% if form_errors(datingForm) is not empty %}
                {{ form_errors(datingForm) }}
            {% endif %}
            {{ form_row(datingForm.object_begin_date) }}
            {{ form_row(datingForm.object_end_date)}}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create new dating !</button>
            </div>
        {{ form_end(datingForm) }}
    </div>
{% endblock %}
