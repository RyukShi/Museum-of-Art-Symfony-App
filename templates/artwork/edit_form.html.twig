{% extends 'base.html.twig' %}

{% block title %}Edit Artwork{% endblock %}

{% block body %}
    <div class="mt-3 container" style="background-color: #E5F1FF;">
        <h4>Edit Artwork Form</h4>
        {{ form_start(artworkEditForm) }}
            {% if form_errors(artworkEditForm) is not empty %}
                {{ form_errors(artworkEditForm) }}
            {% endif %}
            {{ form_row(artworkEditForm.number) }}
            {{ form_row(artworkEditForm.name) }}
            {{ form_row(artworkEditForm.title) }}
            {{ form_row(artworkEditForm.dimensions) }}
            {{ form_row(artworkEditForm.medium) }}
            {{ form_row(artworkEditForm.classification) }}
            {{ form_row(artworkEditForm.dating_artwork) }}
            {{ form_row(artworkEditForm.artist) }}
            <div class="mt-3" style="display: flex; justify-content: space-evenly; flex-wrap: wrap;">
                <button type="submit" class="btn btn-primary">Modify artwork !</button>
                <a class="btn btn-danger" role="button" href="{{ path('all_artwork') }}">Cancel</a>
            </div>
        {{ form_end(artworkEditForm) }}
    </div>
{% endblock %}
